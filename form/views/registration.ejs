<%- include('./partials/header.ejs')%>
<%- include('./partials/navbar.ejs')%>
<div class="container">
    <div class="row mt-5">
    <h1>Registration Page</h1>
    <hr>
    <form class="row g-3">
      <div class="col-md-6">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" required-id="name" name="name">
       </div>
      
      <div class="col-md-6">
        <label for="inputEmail4" class="form-label">Email</label>
        <input type="email" class="form-control" required-id="email" email="email">
      </div>
      <div class="col-md-6">
        <label for="inputPassword4" class="form-label">Password</label>
        <input type="password" class="form-control" required-id="password" password="password">
      </div>
      <div class="col-md-6">
        <label for="inputCity" class="form-label">City</label>
        <input type="text" class="form-control" required-id="city" city="city">
      </div>
      <div class="col-md-4">
        <label for="inputState" class="form-label">State</label>
        <select id="inputState" class="form-select" required-id="state" state="state">
          <option selected>Choose</option>
          <option>West Bengal</option>
          <option>Maharashtra</option>
          <option>Tamil Nadu</option>
        </select>
      </div>
      <div class="col-md-2">
        <label for="inputZip" class="form-label">Pin code</label>
        <input type="text" class="form-control" required-id="pin" pin="pin">
      </div>
      <div class="col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck">
          <label class="form-check-label" for="gridCheck">
            Agree to all Terms and Conditions
          </label>
        </div>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Sign in</button>
      </div>
    </form>
</div>
</div>
<%- include('./partials/footer.ejs')%>

   